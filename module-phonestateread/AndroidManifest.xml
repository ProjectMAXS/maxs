<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.projectmaxs.module.phonestateread"
    android:versionCode="2000504877"
    android:versionName="0.5.18" >


    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="org.projectmaxs.permission.USE_MAIN" />
    <uses-permission android:name="org.projectmaxs.permission.USE_MAIN_AS_MODULE" />
    <uses-permission android:name="org.projectmaxs.permission.READ_CONTACTS" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_maxs"
        android:label="@string/app_name" >
        <activity android:name="org.projectmaxs.shared.global.util.PermissionUtil$RequestPermissionDialog" />
        <activity
            android:name=".activities.InfoAndSettings"
            android:exported="true" />
        <activity
            android:name=".activities.Settings"
            android:exported="true" />

        <receiver
            android:name=".ModuleReceiver"
            android:label="@string/app_module_receiver_label"
            android:permission="org.projectmaxs.permission.USE_MODULE" >
            <intent-filter>
                <action android:name="org.projectmaxs.REGISTER" />
                <action android:name="org.projectmaxs.EXPORT_SETTINGS" />
                <action android:name="org.projectmaxs.IMPORT_SETTINGS" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".StartStopReceiver"
            android:permission="org.projectmaxs.permission.USE_MODULE" >
            <intent-filter>
                <action android:name="org.projectmaxs.SERVICE_STARTED" />
                <action android:name="org.projectmaxs.SERVICE_STOPPED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ModuleService"
            android:permission="org.projectmaxs.permission.USE_MODULE" >
            <intent-filter>
                <action android:name="org.projectmaxs.PERFORM_COMMAND" />
            </intent-filter>
        </service>
        <service
            android:name=".PhoneStateReadService"
            android:permission="org.projectmaxs.permission.USE_PHONESTATE_READ" >
            <intent-filter>
                <action android:name="org.projectmaxs.ACTION_BIND_FILEWRITE" />
            </intent-filter>
        </service>
        <service
            android:name=".PhoneStateService"
            android:exported="false" >
            <intent-filter>
                <action android:name="org.projectmaxs.module.phonestateread.START_PHONESTATE_SERVICE" />
                <action android:name="org.projectmaxs.module.phonestateread.STOP_PHONESTATE_SERVICE" />
            </intent-filter>
        </service>
    </application>

</manifest>
