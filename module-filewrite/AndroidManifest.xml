<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.projectmaxs.module.filewrite"
      android:versionCode="1"
      android:versionName="0.0.1.0">
    <permission android:name="org.projectmaxs.permission.USE_MODULE"/>
    <permission android:name="org.projectmaxs.permission.USE_MAIN"/>
    <permission android:name="org.projectmaxs.permission.USE_MAIN_AS_MODULE"/>
    <permission android:name="org.projectmaxs.permission.USE_INCOMING_FILETRANSFER_SERVICE"/>
    <permission android:name="org.projectmaxs.permission.FILE_WRITE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="org.projectmaxs.permission.USE_MAIN"/>
    <uses-permission android:name="org.projectmaxs.permission.USE_MAIN_AS_MODULE"/>
    <uses-sdk android:minSdkVersion="10"/>
    <application android:label="@string/app_name">
        <activity android:name=".activities.InfoAndSettings" android:exported="true"/>
        <receiver android:name=".ModuleReceiver"
            android:label="@string/app_module_receiver_label" android:permission="org.projectmaxs.permission.USE_MODULE">
            <intent-filter>
                <action android:name="org.projectmaxs.REGISTER"/>
                <action android:name="org.projectmaxs.EXPORT_SETTINGS"/>
                <action android:name="org.projectmaxs.IMPORT_SETTINGS"/>
            </intent-filter>
        </receiver>
        <service android:name=".ModuleService" android:permission="org.projectmaxs.permission.USE_MODULE">
            <intent-filter>
                <action android:name="org.projectmaxs.PERFORM_COMMAND"/>
                <action android:name="org.projectmaxs.ACTION_BIND_FILEWRITE"/>
            </intent-filter>
        </service>
        <service android:name=".FileWriteService" android:permission="org.projectmaxs.permission.FILE_WRITE">
            <intent-filter>
                <action android:name="org.projectmaxs.ACTION_BIND_FILEWRITE"/>
            </intent-filter>
        </service>
        <service
            android:name=".IncomingFileTransferService"
            android:permission="org.projectmaxs.permission.USE_INCOMING_FILETRANSFER_SERVICE" >
            <!-- This intent filter is required -->
            <intent-filter>
                <action android:name="org.projectmaxs.INCOMING_FILETRANSFER" />
            </intent-filter>
        </service>
    </application>
</manifest> 
